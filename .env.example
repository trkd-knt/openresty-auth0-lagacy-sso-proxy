# Auth0 設定
AUTH0_DOMAIN=yourtenant.auth0.com
AUTH0_CLIENT_ID=your_client_id_here
AUTH0_CLIENT_SECRET=your_client_secret_here

# セッション暗号化キー（本番環境では強固なランダム文字列を使用）
SESSION_SECRET=change-this-to-a-secure-random-string-in-production
SESSION_LIFETIME=3600

# 公開ホスト（本番では実際のドメインを設定）
PUBLIC_HOST=sso.example.com

# PostgreSQL設定（資格情報保存用）
PGHOST=postgres
PGPORT=5432
PGDATABASE=app
PGUSER=app
PGPASSWORD=app

# Redis設定（セッションキャッシュ用）
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=false

# 暗号化キー管理（PoC用）
DATA_KEY_VERSION=1
DATA_KEY_v1=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# 環境設定
ENVIRONMENT=development
